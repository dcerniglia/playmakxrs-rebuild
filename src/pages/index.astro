---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import StorySection from '../components/StorySection.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Playmakxrs Global™ - Game Day Is Every Day"
  description="Amplifying voices of athletes and creators who make plays that matter"
>
  <Navigation />

  <Hero
    title="Game Day Is"
    subtitle="Every Day™"
    description="Amplifying voices of athletes and creators who make plays that matter"
    ctaText="Join the Team"
    ctaHref="/join-us"
    showSocialProof={true}
  />

  <!-- Mission Section -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold text-black mb-6">
        Where Courage, Action, and Legacy Meet
      </h2>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed mb-8">
        Playmakxrs Global™ celebrates athletes, creators, and community leaders who refuse to stay silent.
        We provide a platform for impact storytelling, exclusive content, and opportunities that matter.
      </p>
      <div class="flex flex-wrap justify-center gap-4 text-gray-600">
        <div class="flex items-center gap-2">
          <span class="text-primary text-2xl">✓</span>
          <span>Athletes</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-primary text-2xl">✓</span>
          <span>Creators</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-primary text-2xl">✓</span>
          <span>Community Leaders</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-primary text-2xl">✓</span>
          <span>Impact Storytelling</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Legacy Collage Section -->
  <section class="bg-gray-50 py-20">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-black mb-4">
          A Legacy of Excellence
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From pioneers who broke barriers to today's playmakxrs who continue the tradition—
          celebrating generations of athletes who refused to stay silent.
        </p>
      </div>

      <div class="relative rounded-lg overflow-hidden shadow-2xl">
        <img
          src="/vintage-football-collage.jpg"
          alt="Vintage football seniors collage - generations of athletes making history"
          class="w-full h-auto"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8 text-white">
          <p class="font-display text-xl md:text-2xl font-bold">
            Every Generation. Every Play. Every Voice.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bobby Grier Story -->
  <StorySection />

  <!-- Callout Section -->
  <section class="bg-black text-white py-20">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
        No Play Too Small. No Dream Too Big.
      </h2>
      <p class="text-xl opacity-90 mb-8 leading-relaxed">
        Every voice matters. Every story counts. Join a movement that amplifies the plays
        that change the game—on the field, in the community, and beyond.
      </p>
      <Button text="Be Part of the Movement" href="/join-us" variant="primary" />
    </div>
  </section>

  <!-- Newsletter Signup -->
  <NewsletterSignup />

  <Footer />
</Layout>
