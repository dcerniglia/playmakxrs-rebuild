---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import BenefitCard from '../components/BenefitCard.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const benefits = [
  {
    icon: 'üìñ',
    title: 'Exclusive Stories',
    description: 'Access behind-the-scenes content, athlete interviews, and impact stories that go beyond the scoreboard. Be part of the narrative that matters.'
  },
  {
    icon: 'üíº',
    title: 'NIL Opportunities',
    description: 'Student-athletes gain access to Name, Image, and Likeness opportunities that help you build your brand, monetize your talent, and maximize your potential.'
  },
  {
    icon: 'üéüÔ∏è',
    title: 'Events & Experiences',
