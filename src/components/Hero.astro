---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  backgroundImage?: string;
  showSocialProof?: boolean;
}

const {
  title,
  subtitle,
  description,
  ctaText,
  ctaHref,
  backgroundImage,
  showSocialProof = false
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<section class="relative bg-black text-white overflow-hidden">
  <!-- Background image with overlay (optional) -->
  {backgroundImage && (
    <div class="absolute inset-0 opacity-20">
      <img
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover"
      />
    </div>
  )}

  <div class="relative max-w-7xl mx-auto px-6 py-22 lg:py-32">
    <!-- Social proof banner with logo (optional) -->
    {showSocialProof && (
      <div class="mb-8">
        {/* <div class="flex items-center justify-center mb-4">
          <img
            src={`${base}/logo.png`}
            alt="Playmakxrs Global™"
            class=" w-full h-auto"
          />
        </div> */}
        <div class="flex flex-wrap justify-center gap-4 text-xs uppercase tracking-wider opacity-60">
          <span>#Playmakxrs™</span>
        </div>
      </div>
    )}

    <!-- Main headline -->
    <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-black mb-6 leading-tight">
      {title}
      {subtitle && (
        <span class="text-primary block">{subtitle}</span>
      )}
    </h1>

    <!-- Description -->
    {description && (
      <p class="text-xl lg:text-2xl mb-10 max-w-2xl opacity-90 leading-relaxed">
        {description}
      </p>
    )}

    <!-- CTA Button -->
    {ctaText && ctaHref && (
      <a
        href={ctaHref}
        class="inline-block bg-primary hover:bg-primary-dark text-white font-display font-bold px-10 py-5 rounded-md text-lg uppercase tracking-wide transition-all duration-300 hover:scale-105"
      >
        {ctaText}
      </a>
    )}
  </div>
</section>
