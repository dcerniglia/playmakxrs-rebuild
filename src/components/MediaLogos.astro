---
const base = import.meta.env.BASE_URL;
const buildPath = (path: string) => `${base}/${path}`.replace(/\/+/g, '/');

const logos = [
  {
    name: 'History',
    src: buildPath('logos/history.svg'),
    href: 'https://www.history.com/articles/bobby-grier-college-football-color-barrier-sugar-bowl',
  },
  {
    name: 'ABC',
    src: buildPath('logos/abc.svg'),
    href: '#',
  },
  {
    name: 'KDKA',
    src: buildPath('logos/kdka.svg'),
    href: 'https://www.youtube.com/watch?v=2C9MDSjUj40&t=7s',
  },
  {
    name: 'Today',
    src: buildPath('logos/today.svg'),
    href: '#',
  },
];
---

<section class="bg-gray-50 py-16 border-t border-gray-200">
  <div class="max-w-4xl mx-auto px-6">
    <p class="text-center text-base uppercase tracking-widest text-gray-500 mb-12 font-semibold">
      As Featured In
    </p>
    <div class="flex justify-center items-center gap-14 md:gap-24">
      {logos.map((logo) => (
        <a
          href={logo.href}
          target="_blank"
          rel="noopener noreferrer"
          class="media-logo block opacity-60 hover:opacity-100 transition-opacity duration-300"
          aria-label={`Featured in ${logo.name}`}
        >
          <img
            src={logo.src}
            alt={logo.name}
            class="h-10 md:h-14 w-auto"
          />
        </a>
      ))}
    </div>
  </div>
</section>
