---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Amplifying voices of athletes and creators who make plays that matter' } = Astro.props;
const base = import.meta.env.BASE_URL;
const buildPath = (path: string) => `${base}${path}`.replace(/\/+/g, '/');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={buildPath('favicon.svg')} />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Remove default margins */
  * {
    margin: 0;
    padding: 0;
  }
</style>
